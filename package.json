{
  "name": "git-create-update-tag-action",
  "version": "1.0.0",
  "description": "GitHub Action to create or update Git tags on local or remote repositories",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "package": "npm run build",
    "test": "jest",
    "lint": "eslint 'src/**/*.ts' --ignore-pattern '**/__tests__/**' --ignore-pattern '**/*.test.ts'",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "github-actions",
    "git",
    "tag",
    "versioning",
    "github",
    "gitea",
    "bitbucket"
  ],
  "author": "LiquidLogicLabs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LiquidLogicLabs/git-create-update-tag-action.git"
  },
  "homepage": "https://github.com/LiquidLogicLabs/git-create-update-tag-action#readme",
  "bugs": {
    "url": "https://github.com/LiquidLogicLabs/git-create-update-tag-action/issues"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/io": "^1.1.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
